import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Project Dashboard',
      theme: ThemeData(
        primarySwatch: Colors.blue,
        fontFamily: 'Arial',
      ),
      home: ProjectDashboard(),
      debugShowCheckedModeBanner: false,
    );
  }
}

class ProjectDashboard extends StatefulWidget {
  @override
  _ProjectDashboardState createState() => _ProjectDashboardState();
}

class _ProjectDashboardState extends State<ProjectDashboard> {
  bool isChartView = false;

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Color(0xFFF5F7FA),
      body: SingleChildScrollView(
        padding: EdgeInsets.all(16),
        child: Column(
          children: [
            // Project Reminder Section
            _buildProjectReminderSection(),
            SizedBox(height: 16),

            Row(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                // Left Column
                Expanded(
                  child: Column(
                    children: [
                      _buildTaskStatsSection(),
                      SizedBox(height: 16),
                      _buildLatestTaskSection(),
                      SizedBox(height: 16),
                      _buildProjectStatsSection(),
                    ],
                  ),
                ),
                SizedBox(width: 16),

                // Right Column
                Expanded(
                  child: Column(
                    children: [
                      _buildTaskPerformanceSection(),
                      SizedBox(height: 16),
                      _buildTransactionsSection(),
                      SizedBox(height: 16),
                      _buildPaymentReminderSection(),
                    ],
                  ),
                ),
              ],
            ),
          ],
        ),
      ),
    );
  }

  Widget _buildProjectReminderSection() {
    return Container(
      padding: EdgeInsets.all(24),
      decoration: BoxDecoration(
        color: Colors.white,
        borderRadius: BorderRadius.circular(16),
        boxShadow: [
          BoxShadow(
            color: Colors.black.withOpacity(0.05),
            blurRadius: 10,
            offset: Offset(0, 2),
          ),
        ],
      ),
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          // Header
          Row(
            mainAxisAlignment: MainAxisAlignment.spaceBetween,
            children: [
              Row(
                children: [
                  Container(
                    width: 32,
                    height: 32,
                    decoration: BoxDecoration(
                      color: Color(0xFF3B82F6),
                      borderRadius: BorderRadius.circular(8),
                    ),
                    child: Icon(Icons.list_alt, color: Colors.white, size: 18),
                  ),
                  SizedBox(width: 12),
                  Text(
                    'PROJECT REMINDER',
                    style: TextStyle(
                      fontSize: 20,
                      fontWeight: FontWeight.w600,
                      color: Color(0xFF1F2937),
                    ),
                  ),
                ],
              ),
              Row(
                children: [
                  Text(
                    'See all',
                    style: TextStyle(
                      color: Color(0xFF3B82F6),
                      fontSize: 16,
                    ),
                  ),
                  Icon(Icons.arrow_forward_ios,
                      color: Color(0xFF3B82F6), size: 16),
                ],
              ),
            ],
          ),
          SizedBox(height: 24),

          // Stats Cards
          Row(
            children: [
              Expanded(child: _buildStatCard('Today', '10', Icons.filter_alt)),
              SizedBox(width: 16),
              Expanded(child: _buildStatCard('Missing', '2', Icons.filter_alt)),
              SizedBox(width: 16),
              Expanded(child: _buildStatCard('Upcoming', '5', Icons.filter_alt)),
            ],
          ),
          SizedBox(height: 32),

          // Today Reminder List
          Text(
            'TODAY REMINDER LIST',
            style: TextStyle(
              fontSize: 18,
              fontWeight: FontWeight.w600,
              color: Color(0xFF1F2937),
            ),
          ),
          SizedBox(height: 16),

          // Reminder Items
          ...['IBAAS', 'CoolRoof', 'AA Food Factory(i)', 'Saphnix']
              .map((title) => _buildReminderItem(title))
              .toList(),
        ],
      ),
    );
  }

  Widget _buildStatCard(String title, String count, IconData icon) {
    return Container(
      padding: EdgeInsets.all(16),
      decoration: BoxDecoration(
        color: Color(0xFFF9FAFB),
        borderRadius: BorderRadius.circular(12),
      ),
      child: Column(
        children: [
          Container(
            width: 48,
            height: 48,
            decoration: BoxDecoration(
              color: Color(0xFF1E40AF),
              borderRadius: BorderRadius.circular(12),
            ),
            child: Icon(icon, color: Colors.white, size: 24),
          ),
          SizedBox(height: 12),
          Text(
            title,
            style: TextStyle(
              color: Color(0xFF6B7280),
              fontSize: 14,
            ),
          ),
          SizedBox(height: 4),
          Text(
            count,
            style: TextStyle(
              fontSize: 24,
              fontWeight: FontWeight.bold,
              color: Color(0xFF1F2937),
            ),
          ),
        ],
      ),
    );
  }

  Widget _buildReminderItem(String title) {
